<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="3dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

         <ImageView
             android:id="@+id/rv_meizi_image"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:scaleType="centerCrop"
             />

         <RelativeLayout
             android:id="@+id/text_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >

             <TextView
                 android:id="@+id/rv_meizi_text_who"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="15dp"
                 android:layout_margin="5dp"
                 android:textStyle="bold"
                 android:maxLines="1"/>

             <TextView
                 android:id="@+id/rv_meizi_text_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/rv_meizi_text_who"
                 android:layout_alignParentRight="true"
                 android:textSize="15dp"
                 android:layout_margin="5dp"
                 android:gravity="end"
                 android:maxLines="1"/>

             <TextView
                 android:id="@+id/rv_meizi_text_desc"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="15dp"
                 android:layout_below="@+id/rv_meizi_text_who"
                 android:layout_marginTop="5dp"
                 android:maxLines="1"/>


         </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>